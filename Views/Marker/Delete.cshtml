@model CutUsage.Models.Marker
@{
    ViewData["Title"] = "Delete Marker";
}

<h2>Delete Marker</h2>
<div>
    <h4>Are you sure you want to delete this?</h4>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.MarkerName</dd>
        <dt class="col-sm-2">Width</dt>
        <dd class="col-sm-10">@Model.MarkerWidth</dd>
        <dt class="col-sm-2">Length</dt>
        <dd class="col-sm-10">@Model.MarkerLength</dd>
        <dt class="col-sm-2">Usage</dt>
        <dd class="col-sm-10">@Model.MarkerUsage</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MarkerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
